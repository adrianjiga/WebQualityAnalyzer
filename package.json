  "license": "MIT",
  "type": "module",
  "bugs": {
    "url": "https://github.com/adrianjiga/WebQualityAnalyzer/issues"
  },
  "homepage": "https://github.com/adrianjiga/WebQualityAnalyzer#readme",
  "devDependencies": {
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.6.4",
    "@types/chrome": "^0.1.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.1.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "copy-webpack-plugin": "^13.0.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.0",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "webpack": "^5.105.3",
    "webpack-cli": "^6.0.1"
  }
